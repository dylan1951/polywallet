{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@packages/shared": [
        "../../packages/shared/src"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
